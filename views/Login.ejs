<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <link rel="stylesheet" href="login.css" />
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
        integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous"></script>
</head>

<body>
    <h1>Short Video Meeting App</h1>
    <div class="main">
        <h2>Room Joining or Creation</h2>

        <div class="form_member">
            <label>Enter your Name:</label>
            <input type="text" class="user-name"  />
        </div>
        <div class="form_member">
            <label>Enter the Uniq Room Number:</label>
            <input type="text" class="room-id"  />
        </div>

        <div class="form_buttons">
            <button type="button" onclick="Join__Meeting()">
                Join or Create Meeting
            </button>
            <span class="button_separator_text">OR</span>
            <button type="button" onclick="create_Meeting()">
                Create a Random Room
            </button>
        </div>
        <span>

        </span>

    </div>

    </div>
    <script>
        const create_Meeting = () => {
            const User_name=$(".user-name").val();
            if(User_name!=""){
                localStorage.setItem("name",User_name);
                location.href = "/room";
            }else{
                alert("please provide your name");
            }
            
        }
     
        const Join__Meeting = () => {
            const text = $(".room-id").val(); 
             const User_name=$(".user-name").val();
            if (text !== ""&& User_name!="") {
                localStorage.setItem("name",User_name);
                location.href = `/${text}`;  // Use the value directly
            }else{
                alert("please provide Name ")
            }
        }
    </script>

</body>

</html>